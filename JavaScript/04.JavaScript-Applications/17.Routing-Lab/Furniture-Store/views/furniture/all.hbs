{{> header}}

<div class="container">
    <div class="row space-top">
        <div class="col-md-12">
            <h1>Welcome to Furniture System</h1>
            <p>Select furniture from the catalog to view details.</p>
        </div>
    </div>

    <div class="row space-top">
        {{#each furnitures}}

        <div class="col-md-4" style="padding-bottom: 20px;">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <blockquote class="card-blockquote">
                        <img src="{{image}}" style="max-width: 310px; max-height:190px;" />
                        <p>{{description}}</p>
                        <footer>Someone famous in
                            <cite title="Source Title">{{make}}</cite>
                        </footer>
                        <div class="pull-right">
                            <br />
                            <a href="#/furtniture/details/{{id}}" class="btn btn-info">Details</a>
                        </div>
                    </blockquote>
                </div>
            </div>
        </div>
        {{else}}

        <div class="col-md-12">
            <h1>No furnitures</h1>
        </div>

        {{/each}}
    </div>

</div>

{{> footer}}