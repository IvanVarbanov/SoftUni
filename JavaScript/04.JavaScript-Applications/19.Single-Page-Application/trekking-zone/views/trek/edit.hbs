{{> header}}

<form class="create-trek" action="#/edit/{{params.trekId}}" method="post">

    <div class="form-label-group">
        <input type="text" name="location" class="form-control" placeholder="Location" value="">
        <label for="inputTrekName">Location</label>
    </div>

    <div class="form-label-group">
        <input type="text" value="" name="dateTime" class="form-control" placeholder="Date">
        <label for="inputTrekDate">Date</label>
    </div>

    <div class="form-label-group">
        <textarea type="text" name="description" class="form-control" placeholder="Description"></textarea>
        <label for="inputTrekDescription">Description</label>
    </div>

    <div class="form-label-group">
        <input type="text" value="" name="imageURL" class="form-control" placeholder="Image">
        <label for="inputTrekImage">Image</label>
    </div>
    <div style="display: none">
        <input name="organizer" value="" />
        <input name="likes" value="" />
    </div>

    <button class="btn btn-lg btn-dark btn-block" type="submit">Edit the trek</button>
</form>

{{> footer}}