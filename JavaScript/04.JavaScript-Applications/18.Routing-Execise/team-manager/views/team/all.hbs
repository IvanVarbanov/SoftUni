<div class="container">
    {{> header}}
    <a href="#/create" class="btn btn-default">Create Team</a>
    <h1>Catalog Page</h1>
    <div style="display: inline-block;">
        {{#each teams}}
        <a href="#/catalog/{{_id}}" class="team-box">
            <span class="spanner">Team name</span>
            <span class="title">{{name}}</span>
            <span class="spanner">Description</span>
            {{#if comment}}
            <p>{{comment}}</p>
            {{else}}
            <p>No description</p>
            {{/if}}
        </a>
        {{else}}
        <p>No teams yet ... <a href="#/create">Create Team</a></p>
        {{/each}}
    </div>
</div>

{{> footer}}